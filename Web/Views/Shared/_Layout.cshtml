<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/4.1.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <div class="navbar-brand">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Patterns</a>
                <a asp-area="" asp-controller="Home" asp-action="Kits" class="navbar-brand">Kits</a>
                <a asp-area="" asp-controller="Home" asp-action="KitPatterns" class="navbar-brand">Kit patterns</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="CrossStitch" asp-action="Updates">Updates</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarWishlist" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Wishlist</a>
                        <div class="dropdown-menu" aria-labelledby="navbarWishlist">
                            <a class="dropdown-item" asp-area="" asp-controller="CrossStitch" asp-action="Wishlist">Patterns</a>
                            <a class="dropdown-item" asp-area="" asp-controller="CrossStitch" asp-action="WishlistKits">Kits</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarReports" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Reports</a>
                        <div class="dropdown-menu" aria-labelledby="navbarReports">
                            <a class="dropdown-item" asp-area="" asp-controller="Report" asp-action="KitPrices">Kits prices</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Report" asp-action="FabricReport">Patterns fabric options</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/core.js"></script>
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    </environment>
<environment exclude="Development">
    <script src="https://code.jquery.com/jquery-3.4.1.js"
        integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
            asp-fallback-src="~/lib/jquery/jquery.js"
            asp-fallback-test="window.jQuery"
        crossorigin="anonymous"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
            asp-fallback-src="~/lib/bootstrap/js/bootstrap.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
            crossorigin="anonymous"
            integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
    </script>
</environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
