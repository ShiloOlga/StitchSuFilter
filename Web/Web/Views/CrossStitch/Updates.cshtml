@model IEnumerable<ConsoleApp1.StitchSuPatternModel>
@{
    ViewData["Title"] = "Updates";
}
@{
    Func<string, string, string> FormatTitle = (id, title) => $"{id} - {title}";
}

<h2>Updates</h2>
<div><b>Table Format Data Displaying in ForEach</b><br /></div>
<table class="table table-bordered table-responsive">
    <tr>
        <th>Image</th>
        <th>Author</th>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>HasDiscount</th>
        <th>Status</th>
    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>
                <a href="@d.Image.FullImageUrl">
                    <img alt="@d.Image.Description" src="@d.Image.PreviewImageUrl" />
                </a>
            </td>
            <td><a href="@d.Author.ProfileLink">@d.Author.Name</a></td>
            <td>@FormatTitle(d.PatternId, d.Info.Title)</td>
            <td><a href="@d.Info.Description">@d.Info.Description</a></td>
            <td>@Html.Raw(d.PriceInfo.AsHtmlString())</td>
            <td>@d.PriceInfo.DiscountPercent</td>
            <td>@d.Status</td>
        </tr>
    }
</table>

