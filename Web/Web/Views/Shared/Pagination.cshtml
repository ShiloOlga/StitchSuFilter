@model PagingModel
@if (Model.TotalPages > 0)
{
    <ul class="pagination">
        <li class="page-item @(Model.ShowPrevious ? "" : "disabled")">
            <a class="page-link" asp-controller="Home" asp-route-page="1" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a asp-controller="Home" asp-route-page="@i" class="page-link">@i</a>
            </li>
        }
        <li class="page-item @(Model.ShowNext ? "" : "disabled")">
            <a class="page-link" asp-controller="Home" asp-route-page="@Model.TotalPages" aria-label="Previous">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
}